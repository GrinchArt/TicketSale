@model IEnumerable<TicketSale.WebUI.Models.UserRolesViewModel>

@{
    ViewData["Title"] = "User List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a href="@Url.Action("EditUserRole", "Admin", new { userId = user.UserId })" class="btn btn-primary btn-sm">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
